<form action="/students/<%=@student.id%>" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="hidden" name="_method" value="patch">
  <label>First Name
    <input type='text' name='student[first_name]' value='<%=@student.first_name%>'></label>
    <p></p>
  <label>Last Name
    <input type='text' name='student[last_name]' value='<%=@student.last_name%>'></label>
    <p></p>
  <label>Email
    <input type='text' name='student[email]'value='<%=@student.email%>'></label>
    <p></p>
    <label>Dojo</label>
    <select name="student[dojo]">
      <% @dojos.each do |dojo| %>
        <% if dojo.id.to_i == params[:id].to_i %>
          <option selected value="<%= dojo.id %>"> <%= dojo.branch %></option>
        <% else  %>
          <option value="<%= dojo.id %>"><%= dojo.branch %></option>
        <% end %>
      <% end %>
    </select>
  </div>

  <input type='submit' value='Update!'>
</form>
